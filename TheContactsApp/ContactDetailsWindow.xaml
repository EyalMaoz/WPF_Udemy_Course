<Window x:Class="TheContactsApp.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheContactsApp"
        mc:Ignorable="d"
        Title="ContactDetailsWindow" Height="192.727" Width="312.727">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>

        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>

        </Style>
    </Window.Resources>
    <StackPanel>
        <TextBox x:Name="nameTextBox"></TextBox>
        <TextBox x:Name="emailTextBox"></TextBox>
        <TextBox x:Name="phoneTextBox"></TextBox>
        <Button Name ="updateButton" Content="Update" Click="Update_Click"></Button>
        <Button Name ="deleteButton" Background="Red" Foreground="WhiteSmoke" Content="Delete" Click="Delete_Click"></Button>
    </StackPanel>
</Window>

